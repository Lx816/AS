            android:layout_height="wrap_content"
            android:lines="1"
            android:gravity="left"
            android:textSize="12sp"
            android:text="3333" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mXiaoShouShiJian3"
            android:layout_width="wrap_content"

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp" >

        <TextView
            android:id="@+id/mXiaoShouJinE2"

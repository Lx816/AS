<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/seashell">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="87dp">

        <TextView
            android:id="@+id/text_mingcheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="物品名称：xxx"/>

        <TextView
            android:id="@+id/text_jiage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="零售价：xxx"/>
        <TextView
            android:id="@+id/text_kuchun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="库存数量：xxx"/>

        <TextView
            android:id="@+id/text_zhekou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="是否折扣：xx"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出售数量"/>
            <EditText
                android:id="@+id/edit_jianshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件"/>
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"/>
            <Button
                android:id="@+id/bt_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"/>

    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="125dp"
        android:background="@mipmap/q01"
        android:id="@+id/imageshangpintupian"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="类别编号："/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="商品名称："/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="库存："/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="零售价："/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="折扣："/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textleibie"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textshangpin"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textkucun"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textlingshou"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textzhekou"/>
    </LinearLayout>

</LinearLayout>
